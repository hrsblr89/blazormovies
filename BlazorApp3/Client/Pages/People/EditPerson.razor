@page "/person/edit/{PersonId:int}"
<h3>Edit Person</h3>

@if (Person != null)
{
    <PersonForm Person="Person" OnValidSubmit="Edit"/>
}

@code {

    [Parameter] public int PersonID { get; set; }
    Person Person = new Person();

    protected override void OnInitialized()
    {
        Person = new Person() { Name = "Hanumantha Raju S", DateOfBirth = DateTime.Today, Biography = "Something" };
    }

    private void Edit()
    {
        Console.WriteLine("Editing Person...");

    }
}
